{
    "version": 2,
    "buildCommand": "npm run build",
    "installCommand": "npm install",
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/verify",
            "dest": "public/verify.html"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ]
} 
